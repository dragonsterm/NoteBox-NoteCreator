{
  "manifest_version": 3,
  "name": "NoteBox - AI Note Creator",
  "version": "0.1.0",
  "description": "A note-taking app powered by AI.",
  "permissions": [
    "activeTab",
    "storage",
    "sidePanel"
  ],
  "action": {
    "default_title": "Open NoteBox"
  },
  "side_panel": {
    "default_path": "index.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "index.html",
        "popup.js",
        "assets/*"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
