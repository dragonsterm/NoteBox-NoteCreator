{
  "manifest_version": 3,
  "name": "NoteBox - AI Note Creator",
  "version": "0.2.0",
  "description": "A note-taking app powered by AI.",
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "action": {
    "default_title": "Open NoteBox"
  },
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "server.js",
        "main.js",
        "content.js",
        "style.css",
        "assets/*",
        "gemini-bridge.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}